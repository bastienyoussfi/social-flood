# Application
NODE_ENV=development
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=poster
DB_PASSWORD=postgres
DB_NAME=social_poster

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Twitter API
# OAuth 1.0a credentials (required for posting)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
# Bearer token (optional, for read-only operations)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Optional: Bearer Token (for API v2)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Bluesky
BLUESKY_HANDLE=your_handle.bsky.social
BLUESKY_APP_PASSWORD=your_bluesky_app_password

# TikTok API
# OAuth 2.0 credentials (required for posting videos)
# Get these from: https://developers.tiktok.com/
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token
TIKTOK_REFRESH_TOKEN=your_tiktok_refresh_token

# Pinterest API
# OAuth 2.0 credentials (required for posting pins)
# Get these from: https://developers.pinterest.com/
PINTEREST_APP_ID=your_pinterest_app_id
PINTEREST_ACCESS_TOKEN=your_pinterest_access_token
PINTEREST_BOARD_ID=your_default_board_id

# Redirect URI (must match exactly in TikTok Developer Portal)
# For development with ngrok: https://YOUR_NGROK_ID.ngrok-free.app/api/auth/tiktok/callback
# For local testing: http://localhost:3000/api/auth/tiktok/callback
# For production: https://yourdomain.com/api/auth/tiktok/callback
TIKTOK_REDIRECT_URI=http://localhost:3000/api/auth/tiktok/callback
